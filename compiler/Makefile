TARFILES = Makefile scanner.mll parser.mly ast.mli vlc.ml generator.ml semant.mll

OBJS = parser.cmo scanner.cmo vlc.cmo

vlc : $(OBJS)
	ocamlc -o vlc $(OBJS)

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

vlc.tar.gz : $(TARFILES)
	cd .. && tar zcf vlc/vlc.tar.gz $(TARFILES:%=vlc/%)

.PHONY : clean
clean :
	rm -f vlc parser.ml parser.mli scanner.ml *.cmo *.cmi

# Generated by ocamldep *.ml *.mli
vlc.cmo: scanner.cmo parser.cmi ast.cmi 
vlc.cmx: scanner.cmx parser.cmx ast.cmi 
parser.cmo: ast.cmi parser.cmi 
parser.cmx: ast.cmi parser.cmi 
scanner.cmo: parser.cmi 
scanner.cmx: parser.cmx 
parser.cmi: ast.cmi 
